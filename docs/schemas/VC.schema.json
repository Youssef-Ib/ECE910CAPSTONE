{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "GreenEnergyCredential",
  "type": "object",
  "properties": {
    "@context": {
      "type": "array"
    },
    "type": {
      "type": "array"
    },
    "issuer": {
      "type": "string"
    },
    "issuanceDate": {
      "type": "string"
    },
    "credentialSubject": {
      "type": "object",
      "properties": {
        "ownerHash": {
          "type": "string"
        },
        "meterHash": {
          "type": "string"
        },
        "siteHash": {
          "type": "string"
        },
        "epochIndex": {
          "type": "integer"
        },
        "energyType": {
          "type": "string"
        },
        "typeCode": {
          "type": "integer"
        },
        "quantityKWh": {
          "type": "integer"
        },
        "policyNonce": {
          "type": "integer"
        }
      },
      "required": [
        "ownerHash",
        "meterHash",
        "siteHash",
        "epochIndex",
        "typeCode",
        "quantityKWh",
        "policyNonce"
      ]
    }
  },
  "required": [
    "@context",
    "type",
    "issuer",
    "issuanceDate",
    "credentialSubject"
  ]
}